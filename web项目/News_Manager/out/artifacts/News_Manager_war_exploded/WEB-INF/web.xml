<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd"
         version="3.1">
    <filter>
        <filter-name>encoding</filter-name>
        <filter-class>charles.news_manage.servlet.EncodingFilter</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>encoding</filter-name>
        <url-pattern>/*</url-pattern>
    </filter-mapping>
    <servlet>
        <servlet-name>loginCheck</servlet-name>
        <servlet-class>charles.news_manage.servlet.LoginCheckServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>findTopicName</servlet-name>
        <servlet-class>charles.news_manage.servlet.FindAllTopicServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>addTopicCheck</servlet-name>
        <servlet-class>charles.news_manage.servlet.AddNewsTopicServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>alterTopicName</servlet-name>
        <servlet-class>charles.news_manage.servlet.AlterTopicServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>deleteTopicName</servlet-name>
        <servlet-class>charles.news_manage.servlet.DeleteTopicServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>loginCheck</servlet-name>
        <url-pattern>/html/LoginServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>findTopicName</servlet-name>
        <url-pattern>/jsp/FindAllTopicServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>addTopicCheck</servlet-name>
        <url-pattern>/jsp/Add_Topic_Servlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>alterTopicName</servlet-name>
        <url-pattern>/jsp/AlterTopicServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>deleteTopicName</servlet-name>
        <url-pattern>/jsp/DeleteTopicServlet</url-pattern>
    </servlet-mapping>
    <welcome-file-list>
        <welcome-file>main.html</welcome-file>
    </welcome-file-list>
</web-app>